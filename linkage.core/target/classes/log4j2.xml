<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <!--
        <Async name="db-log">
            <AppenderRef ref="RollingFile"/>
        </Async>
        -->

        <Console name="console" class="org.apache.log4j.ConsoleAppender">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %c{36} %L %M - %msg%xEx%n %X{clientIP}"/>
        </Console>

        <RollingFile name="biz-log" fileName="E:/logs/biz.log" filePattern="E:/logs/biz-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %c{36} %L %M - %msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="service.middleware.linkage.center" level="DEBUG" additivity="false">
            <AppenderRef ref="biz-log"/>
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="service.middleware.linkage.framework.bootstrap" level="DEBUG" additivity="false">
            <AppenderRef ref="biz-log"/>
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="service.middleware.linkage.framework.connection.pool" level="DEBUG" additivity="false">
            <AppenderRef ref="biz-log"/>
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="service.middleware.linkage.framework.handlers" level="DEBUG" additivity="false">
            <AppenderRef ref="biz-log"/>
            <AppenderRef ref="console"/>
        </Logger>
        <Logger name="service.middleware.linkage.framework.provider" level="DEBUG" additivity="false">
            <AppenderRef ref="biz-log"/>
            <AppenderRef ref="console"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="app-log"/>
        </Root>
    </Loggers>
</Configuration>
