<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
<description>Test</description>
<!-- 定义一些启动参数 -->
<!-- <bean id=""></bean> -->
<bean id="addService" class="service.framework.io.client.comsume.ConsumerBean">
	<property name="route">
		<ref bean="linkedToServiceDirectly"></ref>
	</property>
	<property name="workerPool">
		<ref bean="clientworkerPool"></ref>
	</property>
	<property name="serviceName">
		<value>calculator</value>
	</property>
	<property name="methodName">
		<value>add</value>
	</property>
	<property name="version">
		<value>1.0.0</value>
	</property>
	<property name="group">
		<value>test</value>
	</property>
</bean>
<!-- 设置客户端连接路由，该路由将从服务中心取得服务列表，并从服务列表中获得一个服务 -->
<bean id="clientRoute" class= "service.framework.route.ClientRoute">
	<property name="serviceCenterConsumerBean">
		<ref bean="linkedToServiceCenterCB"></ref>
	</property>
	<property name="filters">
		<list>
			<bean class="service.framework.route.filters.ClientRouteFilter"></bean>
		</list>
	</property>
</bean>
<!-- 设置连接到注册中心的配置 -->
<bean id="linkedToServiceCenterCB" class="service.framework.io.client.comsume.ConsumerBean">
	<property name="route">
		<ref bean="linkedToServiceCenter"></ref>
	</property>
	<property name="workerPool">
		<ref bean="clientworkerPool"></ref>
	</property>
	<property name="serviceName">
		<value>serviceCenter</value>
	</property>
	<property name="methodName">
		<value>getServiceList</value>
	</property>
	<property name="version">
		<value>1.0.0</value>
	</property>
	<property name="group">
		<value>test</value>
	</property>
</bean>
<bean id="linkedToServiceCenter" class="service.framework.route.DefaultRoute">
	<property name="serviceList">
		<list>
			<bean class="servicecenter.service.ServiceInformation">
				<property name="address">
					<value>localhost</value>
				</property>
				<property name="port">
					<value>5002</value>
				</property>
			</bean>
		</list>
	</property>
</bean>
<bean id="linkedToServiceDirectly" class="service.framework.route.DefaultRoute">
	<property name="serviceList">
		<list>
			<bean class="servicecenter.service.ServiceInformation">
				<property name="address">
					<value>localhost</value>
				</property>
				<property name="port">
					<value>5001</value>
				</property>
			</bean>
		</list>
	</property>
</bean>
<bean id="linkedToService" class="service.framework.route.DefaultRoute">
	<property name="serviceList">
		<list>
			<bean class="servicecenter.service.ServiceInformation">
				<property name="address">
					<value>localhost</value>
				</property>
				<property name="port">
					<value>5001</value>
				</property>
			</bean>
		</list>
	</property>
</bean>
<!-- 设置本地服务的客户端部分启动配置 -->
<bean id="defaultClient" class="service.framework.io.server.DefaultClient">
	<constructor-arg>
		<ref bean="clientmasterHandler"/>
	</constructor-arg>
	<constructor-arg>
		<ref bean="clientworkerPool"/>
	</constructor-arg>
</bean>
<bean id="clientmasterHandler" class="service.framework.io.fire.MasterHandler">
	<constructor-arg>
		<value>5</value>
	</constructor-arg>
</bean>
<bean id="clientworkerPool" class="service.framework.io.server.DefaultWorkerPool">
	<constructor-arg>
		<ref bean="clientmasterHandler"/>
	</constructor-arg>
</bean>
</beans>